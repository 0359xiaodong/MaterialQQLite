<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chatlistitem_imgAvatar"
            android:layout_width="@dimen/chat_cxAvatar"
            android:layout_height="@dimen/chat_cyAvatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/chatlistitem_txtContent"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/chatlistitem_imgAvatar"
            android:autoLink="phone|web"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:minHeight="60dp"
            android:paddingBottom="14dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="16dp"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>